# === Google Gemini API ===
GOOGLE_API_KEY=your_api_key_here

# === Admin Token (/api/update-data endpoint'ini korur) ===
ADMIN_SECRET_TOKEN=your_secret_token_here

# === Environment ===
# Options: development, production
ENVIRONMENT=production

# === Logging ===
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# === Features ===
USE_EMBEDDINGS=true

# === Digital Ocean Specific (Production) ===
# Uncomment and set when deploying to DigitalOcean
# DATABASE_URL=postgresql://user:password@host:port/dbname
# REDIS_URL=redis://host:port
